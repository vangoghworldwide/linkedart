### Production Activity
vgw:Production
  a sh:NodeShape ;
  sh:targetClass crm:E12_Production ;

  # carried out by
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P14_carried_out_by ;
    sh:minCount 1 ;
    sh:severity sh:Violation ;
    sh:message "Artwork requires a carried_out_by (crm:P14_carried_out_by)" ;
    sh:group vgw:ProductionGroup
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P14_carried_out_by ;
    sh:or(
      [ sh:class crm:E39_Actor ]
      [ sh:class crm:E21_Person ]
      [ sh:class crm:E74_Group ]
    );
    sh:severity sh:Violation ;
    sh:message "Production carried_out_by requires a type Actor (crm:E39_Actor), Person (crm:E21_Person) or Group (crm:E74_Group)" ;
    sh:group vgw:ProductionGroup 
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P14_carried_out_by ;
    sh:node vgw:ULANConcept ;
    sh:severity sh:Warning ;
    sh:message "Production carried_out_by is advised to have a value from ULAN" ;
    sh:group vgw:ProductionGroup
  ] ;
  # took place at
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P7_took_place_at ;
    sh:minCount 1 ;
    sh:severity sh:Violation ;
    sh:message "Production requires a took_place_at (crm:P7_took_place_at)" ;
    sh:group vgw:ProductionGroup
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P7_took_place_at ;
    sh:class crm:E53_Place;
    sh:severity sh:Violation ;
    sh:message "Production took_place_at requires a type Place (crm:E53_Place)" ;
    sh:group vgw:ProductionGroup 
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P7_took_place_at ;
    sh:node vgw:TGNConcept ;
    sh:severity sh:Warning ;
    sh:message "Production took_place_at is advised to have a value from TGN" ;
    sh:group vgw:ProductionGroup
  ] ;
  # Timespan
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P4_has_time-span ;
    sh:minCount 1 ;
    sh:severity sh:Violation ;
    sh:message "Production requires a timespan (crm:P4_has_time-span)" ;
    sh:group vgw:ProductionGroup
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P4_has_time-span ;
    sh:class crm:E52_Time-Span ;
    sh:severity sh:Violation ;
    sh:message "Production timespan requires type TimeSpan (crm:E52_Time-Span)" ;
    sh:group vgw:ProductionGroup 
  ] ;
  # technique
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P32_used_general_technique ;
    sh:minCount 1 ;
    sh:severity sh:Warning ;
    sh:message "Production is advised to have a used_general_technique (crm:P32_used_general_technique)" ;
    sh:group vgw:ProductionGroup
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P32_used_general_technique ;
    sh:class crm:E55_Type;
    sh:severity sh:Violation ;
    sh:message "Production technique requires a type Type (crm:E55_Type)" ;
    sh:group vgw:ProductionGroup 
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P32_used_general_technique ;
    sh:node vgw:AATConcept ;
    sh:severity sh:Warning ;
    sh:message "Production used_general_technique is advised to have a value from AAT" ;
    sh:group vgw:ProductionGroup
  ] .

### TimeSpan
vgw:TimeStamp
  a sh:NodeShape ;
  sh:targetClass crm:E52_Time-Span ;
  # begin
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P82a_begin_of_the_begin ;
    sh:minCount 1 ;
    sh:severity sh:Violation ;
    sh:message "Timespan requires a begin date (crm:P82a_begin_of_the_begin)" 
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P82a_begin_of_the_begin ;
    sh:severity sh:Violation ;
    sh:datatype xsd:date ;
    sh:message "Timespan begin_of_the_begin requires a value of type xsd:date" 
  ] ;
  #end
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P82b_end_of_the_end ;
    sh:severity sh:Violation ;
    sh:datatype xsd:date ;
    sh:message "Timespan end_of_the_end requires a value of type xsd:date" 
  ] .

### Dimension
vgw:Dimension
  a sh:NodeShape ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P2_has_type;
    sh:minCount 1 ;
    sh:severity sh:Violation ;
    sh:message "Dimension requires a classification"
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P2_has_type ;
    sh:node vgw:AATConcept ;
    sh:severity sh:Violation ;
    sh:message "Dimension classification requires a value from AAT" 
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P91_has_unit;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:severity sh:Violation ;
    sh:message "Dimension requires exactly one measurement unit" 
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P91_has_unit;
    sh:class crm:E58_Measurement_Unit ;
    sh:severity sh:Violation ;
    sh:message "Dimension unit requires type MeasurementUnit (crm:E58_Measurement_Unit)" 
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path crm:P90_has_value ;
    sh:minCount 1 ;
    sh:severity sh:Violation ;
    sh:message "Dimension requires a value (crm:P90_has_value)" 
  ] .

### Concepts from controlled vocabularies
vgw:AATConcept a sh:NodeShape ;
  sh:nodeKind sh:IRI ;
  sh:or(
    [
      sh:pattern "^http://vocab.getty.edu/aat/" 
    ]
    [
      sh:property [
        sh:minCount 1 ;
        sh:path skos:exactMatch ;
        sh:nodeKind sh:IRI ;
        sh:pattern "^http://vocab.getty.edu/aat/"
      ]
    ]
  ).
vgw:ULANConcept a sh:NodeShape ;
  sh:nodeKind sh:IRI ;
  sh:or(
    [
      sh:pattern "^http://vocab.getty.edu/ulan/" 
    ]
    [
      sh:property [
        sh:minCount 1 ;
        sh:path skos:exactMatch ;
        sh:nodeKind sh:IRI ;
        sh:pattern "^http://vocab.getty.edu/ulan/"
      ]
    ]
  ).
vgw:TGNConcept a sh:NodeShape ;
  sh:nodeKind sh:IRI ;
  sh:or(
    [
      sh:pattern "^http://vocab.getty.edu/tgn/" 
    ]
    [
      sh:property [
        sh:minCount 1 ;
        sh:path skos:exactMatch ;
        sh:nodeKind sh:IRI ;
        sh:pattern "^http://vocab.getty.edu/tgn/"
      ]
    ]
  ).  
vgw:VGWConcept a sh:NodeShape ;
  sh:nodeKind sh:IRI ;
  sh:pattern "^https://vangoghworldwide.org/data/concept/" .


### Groups
sh:VgwUriGroup 
  a sh:PropertyGroup ;
  rdfs:label "Link to VGW URI" .

sh:TypeGroup 
  a sh:PropertyGroup ;
  rdfs:label "Specific type" .

sh:IdentifierGroup 
  a sh:PropertyGroup ;
  rdfs:label "Indentifiers" .